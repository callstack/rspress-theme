{
  "name": "callstack-rspress-theme",
  "private": true,
  "author": "Jakub RomaÅ„czyk <jakub.romanczyk@callstack.com>",
  "license": "MIT",
  "packageManager": "pnpm@9.12.2",
  "scripts": {
    "build": "pnpm -F !./packages/tester build",
    "build:all": "pnpm --filter ./packages/theme build && pnpm --filter ./packages/preset build && pnpm --filter ./packages/tester build",
    "dev": "pnpm --filter ./packages/tester dev",
    "dev:tester": "pnpm --filter ./packages/tester dev",
    "preview": "pnpm --filter ./packages/tester preview",
    "lint": "biome check --write",
    "typecheck": "pnpm -r typecheck",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/cli": "^2.27.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md}": "biome format"
  }
}
